<h1> New Scientist Form</h1>


<% if flash[:error] %>
<%flash[:error].each do |e|%>
<%= e %>
<% end %>
<% end %>

<%= form_for @scientist do |f|%>

<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :field_of_study %>
<%= f.text_field :field_of_study %>

<%= f.submit "Submit New Scientist"%>

<% end %>